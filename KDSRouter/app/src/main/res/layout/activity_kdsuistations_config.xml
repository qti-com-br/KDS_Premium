        <View
            android:layout_width="@dimen/relations_headers_separator"
            android:layout_height="fill_parent"
            android:background="@color/relations_headers_fg"
            android:visibility="visible" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/func"
            android:background="@color/relations_headers_bg"
            android:layout_weight="3.1"
            android:id="@+id/txtFunc"
            android:gravity="center"
            android:textColor="@color/relations_headers_fg" />
