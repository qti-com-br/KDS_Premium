    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:showDividers="middle"
        android:divider="#FFFF00"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:background="@drawable/listview_border"
        android:paddingBottom="2dp"
        android:weightSum="1">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/lstStations"
            android:layout_gravity="center_horizontal"
            android:choiceMode="singleChoice"
            android:drawSelectorOnTop="true"
            android:footerDividersEnabled="true"
            android:headerDividersEnabled="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:dividerHeight="2dp"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txtError"
        android:textColor="@android:color/holo_red_light" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:showDividers="middle"
        android:divider="#FFFF00"
        android:layout_height="45dp"
        >
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp">

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/update_to_all"
                android:id="@+id/btnUpdate"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="@string/delete"
                android:id="@+id/btnDel"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/btnUpdate"
                android:layout_toStartOf="@+id/btnUpdate" />

            <Button
                android:layout_width="80dp"
                android:layout_height="fill_parent"
                android:text="@string/new_entry"
                android:id="@+id/btnNew"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/btnDel" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_id"
                android:id="@+id/btnShowID"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/btnNew"
                android:layout_toStartOf="@+id/btnNew" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/retrieve_from"
                android:id="@+id/btnRetrieve"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/btnShowID"
                android:layout_toStartOf="@+id/btnShowID" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reset"
                android:id="@+id/btnReset"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/btnRetrieve"
                android:layout_toStartOf="@+id/btnRetrieve" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>