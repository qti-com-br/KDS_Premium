<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/settings_page_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/relations_headers_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/category_name"
                android:id="@+id/textView31"
                android:textColor="#ffffff"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/text_indentation" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/txtCategory"
                android:layout_weight="1"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:singleLine="true"
                android:paddingLeft="@dimen/text_indentation"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="center|left" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/textview_border">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/station"
                    android:id="@+id/textView32"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:paddingLeft="@dimen/text_indentation" />

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:id="@+id/txtStation"
                    android:inputType="text"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="bottom"
                    android:textAlignment="gravity"
                    android:singleLine="true"
                    android:layout_alignBottom="@+id/txtDelay"
                    android:layout_toEndOf="@+id/textView32" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/delayprep"
                    android:id="@+id/textView33"
                    android:layout_alignBottom="@+id/txtStation"
                    android:layout_toEndOf="@+id/txtStation"
                    android:paddingLeft="@dimen/text_indentation" />

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtDelay"
                    android:gravity="bottom"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/textView33"
                    android:singleLine="true" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/background"
                    android:id="@+id/btnBG"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/txtDelay"
                    android:alpha="255" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/foreground"
                    android:id="@+id/btnFG"
                    android:layout_column="4"
                    android:alpha="255" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/screen"
                    android:id="@+id/textView34"
                    android:paddingLeft="@dimen/text_indentation" />

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:id="@+id/txtScreen"
                    android:gravity="bottom"
                    android:singleLine="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/preparation_time"
                    android:id="@+id/textPrep"

                    android:paddingLeft="@dimen/text_indentation" />

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtPrep"
                    android:gravity="bottom"
                    android:singleLine="true" />


                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/printable"
                    android:id="@+id/chkPrintable" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="100"
            android:background="@color/filter_title_color">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:id="@+id/txtItemTitle"
                android:layout_gravity="center_vertical"
                android:layout_weight="99"
                android:textColor="#ffffff"
                android:paddingLeft="@dimen/text_indentation" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/btnItemNew"
                    android:layout_weight="99"
                    android:src="@drawable/add" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:showDividers="middle"
            android:divider="#FFFF00"
            android:layout_height="match_parent"
            android:weightSum="7"
            android:background="@color/relations_headers_bg"
            android:gravity="center">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.8"
                android:background="@color/relations_headers_bg"
                android:gravity="center"
                android:text="@string/item"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/relations_headers_fg"
                android:textSize="@dimen/header_textsize" />
            <View
                android:layout_width="@dimen/relations_headers_separator"
                android:layout_height="fill_parent"
                android:background="@color/relations_headers_fg"
                android:visibility="visible" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/station"
                android:id="@+id/textView20"
                android:background="@drawable/textview_border"
                android:layout_weight="0.5"
                android:textColor="@color/relations_headers_fg"
                android:textAlignment="center"
                android:paddingLeft="3dp"
                android:textSize="@dimen/header_textsize"
                android:gravity="center" />
            <View
                android:layout_width="@dimen/relations_headers_separator"
                android:layout_height="fill_parent"
                android:background="@color/relations_headers_fg"
                android:visibility="visible" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/screen"
                android:id="@+id/textView21"
                android:background="@drawable/textview_border"
                android:layout_weight="0.5"
                android:textColor="@color/relations_headers_fg"
                android:textAlignment="center"
                android:paddingLeft="3dp"
                android:textSize="@dimen/header_textsize"
                android:gravity="center" />
            <View
                android:layout_width="@dimen/relations_headers_separator"
                android:layout_height="fill_parent"
                android:background="@color/relations_headers_fg"
                android:visibility="visible" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/delayprep"
                android:id="@+id/textView5"
                android:layout_weight="1"
                android:background="@color/relations_headers_bg"
                android:textColor="@color/relations_headers_fg"
                android:textAlignment="center"
                android:textSize="@dimen/header_textsize"
                android:gravity="center"
                android:layout_marginLeft="1dp"
                android:paddingLeft="3dp" />
            <View
                android:layout_width="@dimen/relations_headers_separator"
                android:layout_height="fill_parent"
                android:background="@color/relations_headers_fg"
                android:visibility="visible" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/preparation_time"
                android:id="@+id/textView10"
                android:layout_weight="1"
                android:background="@color/relations_headers_bg"
                android:textColor="@color/relations_headers_fg"
                android:textAlignment="center"
                android:textSize="@dimen/header_textsize"
                android:gravity="center"
                android:layout_marginLeft="1dp"
                android:paddingLeft="3dp" />
            <View
                android:layout_width="@dimen/relations_headers_separator"
                android:layout_height="fill_parent"
                android:background="@color/relations_headers_fg"
                android:visibility="visible" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/printable"
                android:background="@color/relations_headers_bg"
                android:textColor="@color/relations_headers_fg"
                android:layout_weight="0.6"
                android:id="@+id/textView7"
                android:textAlignment="center"
                android:textSize="@dimen/header_textsize"
                android:gravity="center"
                android:layout_marginLeft="1dp"
                android:paddingLeft="3dp" />

            <View
                android:layout_width="@dimen/relations_headers_separator"
                android:layout_height="fill_parent"
                android:background="@color/relations_headers_fg"
                android:visibility="visible" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:background="@color/relations_headers_bg"

                android:layout_weight="0.6"
                android:id="@+id/txtNew"
                android:textColor="#0000ff"
                android:textAlignment="center"
                android:layout_marginLeft="1dp" />
        </LinearLayout>
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lstItems"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/textview_border" />

</LinearLayout>
