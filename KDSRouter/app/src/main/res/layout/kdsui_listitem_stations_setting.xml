<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:theme="@style/AppTheme"

    android:weightSum="13">
    <!--android:textColor="@android:color/black"-->
    <!--android:descendantFocusability="blocksDescendants"-->
    <ImageView
        android:id="@+id/imgEdit"
        android:layout_width="32dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="center" />

    <ImageView
        android:id="@+id/imgNetwork"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="centerInside" />

    <View
        android:layout_width="@dimen/relations_headers_separator"
        android:layout_height="fill_parent"
        android:background="#B8B8B8"
        android:visibility="visible" />

    <EditText
        android:id="@+id/txtStationID"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:editable="true"
        android:enabled="true"
        android:gravity="center"
        android:paddingLeft="2dp"
        android:singleLine="true"
        android:text="1"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/primary_text_light"
        android:textCursorDrawable="@null" />


    <View
        android:layout_width="@dimen/relations_headers_separator"
        android:layout_height="fill_parent"
        android:background="#B8B8B8"
        android:visibility="visible" />

    <Spinner
        android:id="@+id/spinnerFunc"
        style="@style/settings_style"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3.1"
        android:entries="@array/station_function"
        android:focusable="false"
        android:gravity="center"
        android:paddingLeft="1dp"
        android:textAlignment="center"
        android:textColor="@android:color/primary_text_light" />

    <View
        android:layout_width="@dimen/relations_headers_separator"
        android:layout_height="fill_parent"
        android:background="#B8B8B8"
        android:visibility="visible" />

    <EditText
        android:id="@+id/txtExpStations"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:digits="1234567890,"
        android:editable="true"
        android:enabled="true"
        android:gravity="center"
        android:inputType="textNoSuggestions"
        android:paddingLeft="1dp"
        android:singleLine="true"
        android:text="2,6,5"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/primary_text_light"
        android:textCursorDrawable="@null" />

    <View
        android:layout_width="@dimen/relations_headers_separator"
        android:layout_height="fill_parent"
        android:background="#B8B8B8"
        android:visibility="visible" />

    <Spinner
        android:id="@+id/spinnerSlaveFunc"
        style="@style/settings_style"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4.2"
        android:entries="@array/slave_function"
        android:focusable="false"
        android:gravity="center"
        android:paddingLeft="1dp"
        android:textAlignment="center"
        android:textColor="@android:color/primary_text_light" />

    <View
        android:layout_width="@dimen/relations_headers_separator"
        android:layout_height="fill_parent"
        android:background="#B8B8B8"
        android:visibility="visible" />


    <TextView
        android:id="@+id/txtSlaveStations"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.7"
        android:clickable="true"
        android:editable="false"
        android:enabled="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:paddingLeft="1dp"
        android:text="4,5"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/primary_text_light"
        android:textCursorDrawable="@null" />

    <View
        android:layout_width="@dimen/relations_headers_separator"
        android:layout_height="fill_parent"
        android:background="#B8B8B8"
        android:visibility="visible" />

    <Spinner
        android:id="@+id/spinnerStatus"
        style="@style/settings_style"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:entries="@array/station_status"
        android:gravity="center"
        android:paddingLeft="1dp"
        android:textAlignment="center"
        android:textColor="@android:color/primary_text_light" />

</LinearLayout>