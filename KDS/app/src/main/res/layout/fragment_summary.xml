<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.bematechus.kds.MainActivityFragmentSum"
    android:id="@+id/fragment_summary">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
		android:background="@color/lci_background_dark"
        android:weightSum="1"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left|top"
            android:weightSum="1"
            android:background="@drawable/media_listview_border"
            android:layout_margin="2dp">

            <TextView
                android:id="@+id/txtSumTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="2dp"
                android:text="@string/summary"
				android:textColor="@color/item_fg"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/lstSum" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
