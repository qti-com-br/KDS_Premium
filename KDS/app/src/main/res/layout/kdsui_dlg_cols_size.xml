<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/move_to_adjust_column_size"
        android:id="@+id/textView32" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/click_anywhere_to_add_new_column"
        android:id="@+id/textView33" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/click_and_drag_the_arrow_up_down_to_remove_column"
        android:id="@+id/textView34"
        android:layout_marginBottom="5dp" />

    <com.bematechus.kds.ColSizeView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/colsizeView"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:layout_marginRight="0dp"
        android:layout_gravity="center_vertical" />


</LinearLayout>