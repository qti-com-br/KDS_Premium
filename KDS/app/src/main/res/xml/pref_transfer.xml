<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <com.bematechus.kdslib.KDSEditTextPreference
        android:key="transfer_default_station"
        android:title="@string/transfer_default_station"
        android:defaultValue="1"
        android:selectAllOnFocus="true"
        android:inputType= "text"
        android:capitalize="words"
        android:singleLine="true"
        android:positiveButtonText="@string/ok"
        android:negativeButtonText="@string/cancel"
        android:maxLines="1" />
    <CheckBoxPreference
        android:key="transfer_auto_to_default"
        android:title="@string/transfer_to_default_automaticlly"
        android:defaultValue="false" />

    <CheckBoxPreference
        android:key="transfer_by_double_click"
        android:title="@string/transfer_by_double_click"
        android:summary="@string/transfer_by_double_disable_bump"
        android:defaultValue="false" />

    <CheckBoxPreference
        android:key="transfer_prep_expo"
        android:title="Transferring order in prep will transfer same order in expo"
        android:defaultValue="false" />


</PreferenceScreen>