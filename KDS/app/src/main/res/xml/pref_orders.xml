    <PreferenceCategory android:title="@string/pref_kds_panels_font">
        <com.bematechus.kds.KDSPreferenceColorPicker
            android:key="panel_bg"
            android:defaultValue="0xffffffff"
            android:title="@string/pref_kds_panels_bg" />
        <com.bematechus.kdslib.KDSEditTextPreference
            android:key="panel_text_line_height"
            android:title= "@string/pref_kds_panels_row_height"
            android:defaultValue="14"
            android:selectAllOnFocus="true"
            android:inputType= "number"
            android:capitalize="words"
            android:singleLine="true"
            android:positiveButtonText="@string/ok"
            android:negativeButtonText="@string/cancel"
            android:maxLines="1" />


    <!-- Panels mode -->
    <com.bematechus.kdslib.KDSListPreference
        android:key="panels_mode"
        android:title="@string/pref_kds_panels_title_mode"
        android:defaultValue="0"
        android:entries="@array/pref_kds_panels_mode_titles"
        android:entryValues="@array/pref_kds_panels_mode_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <!-- Panels rows -->
    <com.bematechus.kdslib.KDSListPreference
        android:key="panels_rows"
        android:title="@string/pref_kds_panels_title_rows"
        android:defaultValue="2"
        android:entries="@array/pref_kds_panels_rows_titles"
        android:entryValues="@array/pref_kds_panels_rows_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <!-- Panels cols -->
