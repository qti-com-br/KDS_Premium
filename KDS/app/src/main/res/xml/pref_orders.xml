        android:key="panels_cols"
        android:title="@string/pref_kds_panels_title_cols"
        android:defaultValue="4"
        android:entries="@array/pref_kds_panels_cols_titles"
        android:entryValues="@array/pref_kds_panels_cols_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <!-- show panel number-->
    <CheckBoxPreference
    android:key="panels_show_number"
    android:title="@string/pref_kds_panels_show_number"
    android:defaultValue="true" />

    <CheckBoxPreference
        android:key="bumpbar_panelnum_focus"
        android:title="@string/pref_kds_panelnum_focus_enabled"
        android:defaultValue="false" />

    <com.bematechus.kdslib.KDSEditTextPreference
        android:key="panelnum_base"
        android:title="@string/pref_kds_panelnum_base"
        android:defaultValue="0"
        android:selectAllOnFocus="true"
        android:inputType= "number"
        android:capitalize="words"
        android:singleLine="true"
        android:dependency="panels_show_number"
        android:positiveButtonText="@string/ok"
        android:negativeButtonText="@string/cancel"
        android:maxLines="1" />

    <com.bematechus.kds.KDSPreferenceBGFGPicker
        android:key="panelnum_bgfg"
        android:defaultValue="-16769076,-1"
        android:dependency="panels_show_number"
