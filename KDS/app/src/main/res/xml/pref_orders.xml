            android:key="from_primary_text"
            android:title="@string/pref_from_primary_text"
            android:defaultValue="@string/from_primary_default_text"
            android:inputType="text"
            android:singleLine="true"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:positiveButtonText="@string/ok"
            android:negativeButtonText="@string/cancel"
            />
        <com.bematechus.kds.KDSPreferenceFontPicker
