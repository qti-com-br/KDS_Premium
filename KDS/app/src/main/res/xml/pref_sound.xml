<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:key="sound_enable"
        android:title="@string/pref_kds_sound_enabled"
        android:defaultValue="false" />
    <com.bematechus.kdslib.KDSEditTextPreference
        android:key="sound_duration"
        android:title="@string/pref_kds_sound_duration"
        android:defaultValue="3"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:capitalize="words"
        android:singleLine="true"
        android:dependency="sound_enable"
        android:positiveButtonText="@string/ok"
        android:negativeButtonText="@string/cancel"
        android:maxLines="1" />
    <com.bematechus.kds.KDSPreferenceSound
        android:key="sound_new_order"
        android:defaultValue="@string/sound_default_new_order"
        android:title="@string/pref_kds_sound_new_order"
        android:dependency="sound_enable"
        />
    <com.bematechus.kds.KDSPreferenceSound
        android:key="sound_order_changed"
        android:defaultValue="@string/sound_default_order_changed"
        android:title="@string/pref_kds_sound_order_changed"
        android:dependency="sound_enable"
        />
    <com.bematechus.kds.KDSPreferenceSound
        android:key="sound_bump_order"
        android:defaultValue="@string/sound_default_bump_order"
        android:title="@string/pref_kds_sound_bump_order"
        android:dependency="sound_enable"
       />

    <com.bematechus.kds.KDSPreferenceSound
        android:key="sound_unbump_order"
        android:defaultValue="@string/sound_default_unbump_order"
        android:title="@string/pref_kds_sound_unbump_order"
        android:dependency="sound_enable"
        />

    <com.bematechus.kds.KDSPreferenceSound
        android:key="sound_transfer_order"
        android:defaultValue="@string/sound_default_transfer_order"
        android:title="@string/pref_kds_sound_transfer_order"
        android:dependency="sound_enable"
        />
    <com.bematechus.kds.KDSPreferenceSound
        android:key="sound_backup_activation"
        android:defaultValue="@string/sound_default_backup_activation"
        android:title="@string/pref_kds_sound_backup_activation"
        android:dependency="sound_enable"
        />
    <com.bematechus.kds.KDSPreferenceSound
        android:key="sound_backup_orders_received"
        android:defaultValue="@string/sound_default_backup_orders_received"
        android:title="@string/pref_kds_sound_backup_station_orders_received"
        android:dependency="sound_enable"
        />
    <com.bematechus.kds.KDSPreferenceSound
        android:key="sound_order_timer_alert1"
        android:defaultValue="@string/sound_default_timer_alert1"
        android:title="@string/pref_kds_sound_order_timer_alert1"
        android:dependency="sound_enable"
        />
    <com.bematechus.kds.KDSPreferenceSound
        android:key="sound_order_timer_alert2"
        android:defaultValue="@string/sound_default_timer_alert2"
        android:title="@string/pref_kds_sound_order_timer_alert2"
        android:dependency="sound_enable"
        />
    <com.bematechus.kds.KDSPreferenceSound
        android:key="sound_order_timer_alert3"
        android:defaultValue="@string/sound_default_timer_alert3"
        android:title="@string/pref_kds_sound_order_timer_alert3"
        android:dependency="sound_enable"
        />
    <com.bematechus.kds.KDSPreferenceSound
        android:key="sound_expo_order_complete"
        android:defaultValue="@string/sound_default_expo_order_complete"
        android:title="@string/pref_kds_sound_expo_order_complete"
        android:dependency="sound_enable"
        />

</PreferenceScreen>