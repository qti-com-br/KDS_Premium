<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.bematechus.kdslib.KDSPreferenceFontPicker
        android:key="condiment_font"
        android:defaultValue="default_font,?attr/condiment_bg,?attr/condiment_fg,condiment_size"
        android:title="@string/pref_kds_condiment_default_font"
        app:supportsColor="true"/>
    <com.bematechus.kdslib.KDSEditTextPreference
        android:key="condiment_start_position"
        android:title="@string/pref_kds_condiment_start_position"
        android:defaultValue="10"
        android:selectAllOnFocus="true"
        android:inputType= "number"
        android:capitalize="words"
        android:dialogTitle="@string/pref_kds_condiment_start_position_title"
        android:singleLine="true"
        android:positiveButtonText="@string/ok"
        android:negativeButtonText="@string/cancel"
        android:maxLines="1" />

</PreferenceScreen>