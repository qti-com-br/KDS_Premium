<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:key="beeper_enabled"
        android:title="@string/pref_kds_beeper_enabled"
        android:defaultValue="false" />
    <com.bematechus.kdslib.KDSListPreference
        android:key="beeper_type"
        android:title="@string/pref_kds_beeper_type"
        android:defaultValue="0"
        android:entries="@array/pref_kds_beeper_type_titles"
        android:entryValues="@array/pref_kds_beeper_type_values"
        android:dependency="beeper_enabled"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />
</PreferenceScreen>